{% endblock %}
{% block body %}
  <main>
  <h1> Modification de l'offre {{ offre.getName() }} </h1>
    {{ form_start(OffreForm) }}
      {{form_row( OffreForm.Name)}}
      {{form_row( OffreForm.Description)}}
