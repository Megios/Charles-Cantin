{% extends "baseAdmin.html.twig" %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('asset/styleAdmin.css')}}">
{% endblock %}
{% block body %}
  <main>
  <div class="info">
      {% for flash_error in app.flashes('danger') %}
          <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
      {% endfor %}
      {% for flash_succes in app.flashes('success') %}
          <div class="alert alert-success" role="alert">{{ flash_succes }}</div>
      {% endfor %}
    </div>
    <h1> Les Catégories </h1>
    <ul>
      {% for categorie in categorieTab %}
        <div class="card">
          <div class="headCard">
            {{categorie.getNom()}}
          </div>
          <div class"contentCard">
            <p> Nombre de photo: {{categorie.getPhotos()|length}} </p>
          </div>
          <div class="action">
            <a href="{{ path('edit_categories',{'id':categorie.getUuid()}) }}"> Modifier </a>
            <a href="{{ path('delete_categorie',{'id':categorie.getUuid()}) }}"> Supprimer </a>
          </div>
        </div>
        
      {% endfor %}
    </ul>
  <a class="endLink" href="{{ path('add_categorie')}}"> Ajouter une catégorie</a>
  <a class="endLink" href="{{ path('app_admin')}}"> Retour </a>

  </main>
{% endblock %}