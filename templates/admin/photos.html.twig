{% extends "baseAdmin.html.twig" %}
{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('asset/styleAdmin.css')}}">
{% endblock %}
{% block body %}
  <main>
    <div class="info">
      {% for flash_error in app.flashes('danger') %}
          <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
      {% endfor %}
      {% for flash_succes in app.flashes('success') %}
          <div class="alert alert-success" role="alert">{{ flash_succes }}</div>
      {% endfor %}
    </div>
    <h1> Les photos </h1>
    <ul>
      {% for photo in photos %}
        <div class="card">
          <div class="headCard">
            <h2>{{photo.getTitre()}} </h2>
          </div>
          <div class="contentCard">
            <p>type: {{photo.getType}}</p>
            <ul>
              {% for categorie in photo.getCategories %}
                <li>{{categorie.getNom()}}</li>
              {% endfor %}
            </ul>
          </div>
          <div class="action">
            <a href="{{ path('delete_photo',{'id':photo.getUuid()}) }}"> Supprimer </a>
          </div>
        </div>
        
      {% endfor %}
    </ul>
  <a class="endLink" href="{{ path('add_photo')}}"> Ajouter une photo </a>
  <a class="endLink" href="{{ path('app_admin')}}"> Retour </a>

  </main>
{% endblock %}